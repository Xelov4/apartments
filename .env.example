# Variables d'environnement pour le projet Video-IA

# Configuration MariaDB
DB_ROOT_PASSWORD=your_root_password
DB_NAME=video_ia_db
DB_USER=video_ia_user
DB_PASSWORD=your_user_password

# Configuration domaine
DOMAIN=localhost
ADDITIONAL_DOMAINS=

# Configuration Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret
JWT_SECRET=your_jwt_secret

# Configuration email
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=your_smtp_password

# Configuration administrateur
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD_HASH=your_admin_password_hash

# Configuration Certbot
CERTBOT_STAGING=1

# Configuration Watchtower 
WATCHTOWER_EMAIL_FROM=noreply@your-domain.com 